<div class="row">
  <div class="col-lg-10 mx-auto mt-5">
    <div class="card mb-5">
      <div class="row">
        <div class="col-lg-4">
          <%= image_tag "user_avatar.png", class: "img-fluid"%>
        </div>
        <div class="col-lg-8 d-flex align-items-center">
          <div class="card-body">
            <h3 class="fw-bold"><%= @user.full_name%></h3>
            <p class="lead"><%= @user.profile_title%></p>
            <p class="lead text-primary"><%= @user.country%></p>
          </div>
        </div>
      </div>
    </div>
    <div class="card mb-5">
      <div class="card-body">
        <div class="row">
          <div class="col-lg-6">
            <div class="d-flex justify-content-start">
              <h3>About</h3>
            </div>
          </div>
          <% if user_signed_in? && current_user == @user%>
            <div class="col-lg-6">
              <div class="d-flex justify-content-end">
                <%= link_to edit_member_description_path, data: {controller: "edit-user-description",} do %>
                  <i class="bi bi-pencil-fill"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <%= render partial: "member_description", locals: {user: @user}%>
        <%#= render "member_description", user: @user %>
        <!-- <p class="lead" id="member-description"><%#= @user.about%></p> -->
      </div>
    </div>
  </div>
</div>
